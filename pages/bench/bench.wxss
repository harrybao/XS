/* pages/bench/bench.wxss */
.put-question{
  height:60rpx;
  width:100%;  
}
.question{
  position: absolute;
  right:20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  height:60rpx;
  width:100rpx;
  color: #FFFFFF;
  font-size:30rpx;
  background-color:#24CF5F;
  border-radius: 6rpx;

}
.swiper-tab{ 
  width: 100%; 
  border-bottom: 2rpx solid #eeeeee; 
  text-align: center; 
  line-height: 80rpx;} 
.swiper-tab-item{ font-size: 30rpx; 
  display: inline-block; 
  width: 33.33%; 
  color: #666666; 
} 
.on{ color: #24CF5F; 
  border-bottom: 5rpx solid #24CF5F;} 
 
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; } 
.swiper-box view{ 
  text-align: center; 
} 
.icons{
  height:35rpx;
  width:35rpx;
}